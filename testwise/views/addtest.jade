
label(for="numberOfQuestions") Number of Questions
input(type="number", id="numberOfQuestions", class="form-control", ng-model="numberOfQuestions")
br
//- div
//-   {{ numberOfQuestions }}
//-   {{ ctrl.data }}
//- button(type="button" class="btn btn-default" ng-click="ctrl.print()")
div(ng-repeat="question in ctrl.range(1,numberOfQuestions) track by $index")
  div(class="row")
    label(for="Question{{question}}" ,class="col-md-2") Question {{ question }}
    input(type="text" , ng-model="ctrl.values['question_'+$index]" , placeholder="Enter your question here" , class="col-md-9")
  div(class="row")
    label(for="Answer Type {{question}}", class="col-md-3") Answer Type for Question {{ question }}
    select(name="choosedOption" , ng-options="option.name for option in ctrl.data.availableOptions track by option.id",ng-model="ctrl.values['answer_type_'+$index]" , class="col-md-2")

    //- input(type="number", id="numberOfOptions", ng-model="ctrl.values['numberOfOptions_'+$index]" , ng-if="ctrl.values['answer_type_'+$index].id != 0 &&  ctrl.values['answer_type_'+$index].id", placeholder="Number of Options" )
  div(class="row")
    label(for="Answer {{question}}" , class="col-md-3") Answer for Question {{ question }}
    input(type="text", ng-model="ctrl.values['answer_'+$index]", ng-if="ctrl.values['answer_type_'+$index].id != 0 && ctrl.values['answer_type_'+$index].id != 3 &&  ctrl.values['answer_type_'+$index].id" )

    //- input(type="text" , ng-model="ctrl.values['answer_type'+$index]" , placeholder="Enter your question here" , class="col-md-12")
  div(class="row")
     label(for="Referenece snswer {{question}}" , class="col-md-3") Reference answer for Question {{ question }}
     input(type="text", ng-model="ctrl.values['reference_answer_'+$index]")
    
button(type="button" class="btn btn-default" ng-click="ctrl.print()")
